doctype html
html
  head
    title Chalish
    link(href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=PT+Serif', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/chosen.min.css')
  body
    link(rel="shortcut icon", href="/images/favicon.ico") 
    .wrapper
      .header.section
        .logo
          img(src='images/chalish-logo.svg')
        -if (session.email == 'create')
          .right
        -else if (session.email)
          .right
            p Username= 
              =session.email
            a(href='/clear') Logout
        -else
          .right
            form(action='/login', method='POST')
              p e-mail
              input(name='email')
              p Password
              input(type='password', name='password')
              input.input(type='submit', name='login', value='login')
            -if (session.error)
              .error
                p Error: 
                  =session.error
      block content
      block footer
      block scripts
        script(src='http://code.jquery.com/jquery-latest.min.js')
        script.
          var item = $('<span>X</span>');
          item.click(function() { $('.error').hide(); });
          $('.error').append(item);
